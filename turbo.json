{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/web/dist/**", "dist/**"]
    },
    "format": {},
    "lint": {
      "dependsOn": ["^lint"]
    },
    "pretty": {
      "dependsOn": ["^format", "^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
